<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:background="@drawable/rounded_corner"
        >

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/ivPoster"
            android:text="@string/wonder_woman_1984"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:transitionName="title" />
        <ImageView
            android:id="@+id/imagePlayIcon"
            android:layout_margin="60dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignLeft="@id/ivPoster"
            android:layout_alignTop="@id/ivPoster"
            android:layout_alignBottom="@id/ivPoster"
            android:layout_alignRight="@id/ivPoster"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            />

        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ivPoster"
            android:fontFamily="sans-serif-condensed"
            android:text="overview"
            android:textSize="16sp" />
    </RelativeLayout>
</layout>