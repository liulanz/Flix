<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:background="@drawable/rounded_corner"
    >

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_marginTop="5dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="TODO"
        tools:srcCompat="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/tvTitle"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/ivPoster"
        android:fontFamily="sans-serif"
        android:text="Wonder Woman 1984"
        android:textSize="24sp"
        android:textStyle="bold"
        android:transitionName="title" />

    <ImageView
        android:id="@+id/imagePlayIcon"
        android:layout_margin="30dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@id/ivPoster"
        android:layout_alignTop="@id/ivPoster"
        android:layout_alignBottom="@id/ivPoster"
        android:layout_alignRight="@id/ivPoster"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        />

    <TextView
        android:id="@+id/tvOverview"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_marginStart="5dp"
        android:textSize="12sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ivPoster"
        android:text="Wonder Woman comes into conflict with the Soviet Union during the Cold War in the 1980s and finds a formidable foe by the name of the Cheetah." />
</RelativeLayout>